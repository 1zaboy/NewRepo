@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model WebApplication1.Models.IndexViewModel
@{
    ViewBag.Title = "Control";
}


<div class="row">
    <div class="col-sm-3">
        @if (ViewBag.UInfo.Icon != null)
        {
            @Html.Raw("<img class=\"card_user_style1\" src=\"data:image/jpeg;base64," + Convert.ToBase64String(ViewBag.UInfo.Icon) + "\" />");
        }
        else
        {
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTxHGpR68174qJmNG1yZvsYxY62PneWPB-E5X1uOH2bRzV16qhs_w" style="width: 100%; height: 100%">
        }
    </div>
    <div class="col-sm-9" style="padding-left: 0px">
        <div class="jumbotron jumbotron_developers">
            <h2 class="text-center EnText">@ViewBag.UInfo.UserName</h2>
            <p class="lead EnText">@ViewBag.UInfo.Description</p>
        </div>
    </div>
</div>    
    <div class="tabbable">
        <!-- Only required for left/right tabs -->
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#tab1" data-toggle="tab">Заказы</a>
            </li>
            <li>
                <a href="#tab2" data-toggle="tab">Разработка</a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="tab1">
                @foreach (DbUserOrder ss in ViewBag.Info1)
                {
                <p>
                    <a>Name: (@ss.MainName)  Price: (@ss.Price)  Date Out: (@ss.DateOut)</a>
                </p>
                }
            </div>
            <div class="tab-pane" id="tab2">
                @foreach (DbUserOrder ss in ViewBag.Info2)
                {
                <p>
                    <a>Name: (@ss.MainName)  Price: (@ss.Price)  Date Out: (@ss.DateOut)</a>
                </p>
                }
            </div>
        </div>
    </div>


